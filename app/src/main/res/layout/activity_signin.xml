<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.ust.leadsv2.androidlogin.SigninActivity">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_white"
            android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:background="@drawable/white_trans_bg"
        android:orientation="vertical"
        android:padding="12dp">

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_name_icon"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:hint="Username"
            />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_edit_text"
            android:drawableLeft="@drawable/ic_password_icon"
            android:paddingStart="10dp"
            android:drawablePadding="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="@color/transparent"
            android:text="Forgot Password?"
            android:textColor="@color/colorPrimaryDark"
            android:onClick="forgotPassword"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:text="SIGN IN"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold"
            android:onClick="goToMainScreen"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button_dark"
            android:text="Sign Up here!"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:onClick="goToSignUp"/>

    </LinearLayout>








</LinearLayout>
